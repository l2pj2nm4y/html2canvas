{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "types": ["node", "jest"],
        "target": "es2015",
        "lib": ["es2015", "es2017", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/lib",
        "declaration": true,
        "declarationDir": "dist/types",
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}
